<h2><%= h post.subject %> <span class="actions">(<%= link_to 'show', post_path(post) %> | <%= link_to 'edit', edit_post_path(post)%> | <%= link_to 'delete', post_path(post), :method => :delete, :confirm => 'Are you sure?' %>)</span></h2>
<%= h post.body %>
<h3>Comments</h3>
<% post.comments.each do |comment| %>
  <%= h comment.body %><br/>
  <br/>
<% end %>